<div>
    <%= form_with(model: user, local: true, url: users_admin_index_path(user)) do |f| %>
            <% if user.errors.any? %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
                <h2 class="font-semibold mb-2"><%= pluralize(user.errors.count, "error") %> proibiu este aluno de ser salvo:</h2>
                <ul class="list-disc list-inside space-y-1">
                    <% user.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                    <% end %>
                </ul>
                </div>
            <% end %>

            <div class="field">
                <p><%= f.label "NÃºmero USP" %></p>
                <p><%= f.text_field :nusp, autofocus: true %></p>
            </div>

            <div class="space-y-1">
                <%= f.label "Email USP", class: "block text-gray-700 font-medium" %>
                <%= f.email_field :email, autocomplete: "email", class: "w-full border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
            </div>

            <div class="actions">
                <%= f.submit "Cadastrar" %>
            </div>
        <% end %>

</div>