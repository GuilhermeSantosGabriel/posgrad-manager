<% if notice %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded mb-4">
    <%= notice %>
  </div>
<% end %>

<h1> Seja bem-vindo, estudante! </h1>

<div class="min-h-screen bg-gradient-to-b from-white to-orange-50 px-4 py-8">
  <!-- Header -->
  <header class="max-w-6xl mx-auto mb-6 flex justify-between items-center">
    <div class="text-xl font-semibold text-blue-700 flex items-center space-x-2">
      <svg class="w-8 h-8 text-blue-600" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><!-- icon --></svg>
      <span>Sistema de Relatórios <span class="text-orange-500 font-bold">Semestrais</span></span>
      <span class="text-sm text-gray-500 ml-2">PPgSI EACH-USP</span>
    </div>
    <div class="text-right text-gray-600 text-sm">
      <p>Logado como: <span class="font-semibold text-blue-700"><%= current_user.name %></span></p>
      <%= button_to 'Sair', destroy_user_session_path, method: :delete, class:"text-red-500 border border-red-500 hover:bg-red-500 hover:text-white px-3 py-1 rounded text-xs" %>
    </div>
  </header>

  <main class="max-w-6xl mx-auto space-y-6 bg-white rounded-md shadow p-6">
    <!-- Navigation Tabs -->
    <nav class="flex space-x-4 mb-6">
      perfil
      relatorio
      historico
    </nav>
    <!-- Aqui era o banner -->
    <section class="bg-blue-50 border border-blue-200 rounded-md px-4 py-3 text-blue-800 flex items-center space-x-2">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path d="M12 12c2 0 2-2 4-2H8c0 2 2 2 4 2z"></path>
        <circle cx="12" cy="12" r="10" stroke="none"></circle>
      </svg>
      <p><strong>Bem-vindo, <%= current_user.name %>!</strong> Navegue entre seu perfil e relatórios</p>
    </section>

    <!-- Antigo partial student -->
    <section class="flex items-center justify-between bg-white border border-blue-200 rounded-md px-4 py-3 shadow-sm">
      <div class="flex items-center space-x-4">
        <div class="bg-blue-600 text-white rounded-full w-12 h-12 flex items-center justify-center font-semibold uppercase">
          <%= current_user.name%>
        </div>
        <div>
          <h2 class="font-semibold text-lg text-blue-900"><%= current_user.name %></h2>
          <p class="text-sm text-gray-700">
            <% if @student.role == "Doutorado" %>
              Doutorando 
            <% else %>
              Mestrando 
            <% end %> - PPgSI EACH-USP
          </p>
        </div>
        <span class="ml-4 inline-block px-3 py-1 rounded-full bg-green-100 text-green-700 text-xs font-semibold">Perfil Completo</span>
      </div>
      <%= link_to 'Editar Perfil', edit_student_path(@student), class: "bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold px-4 py-2 rounded-md" %>
    </section>

    <!-- Informacoes do aluno -->
    <section class="bg-white border border-gray-200 rounded-md shadow p-6">
      <h3 class="text-blue-800 font-semibold mb-3 flex items-center space-x-2">
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M10 14L21 3M21 3v6M21 3H15"/></svg>
        <span>Informações Gerais</span>
      </h3>
      <p class="text-gray-500 mb-4 text-sm">Dados permanentes do estudante - atualizados apenas quando necessário</p>
      <form class="space-y-4" autocomplete="off">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="email" class="block text-gray-700 font-semibold mb-1">E-mail Institucional <span class="text-red-500">*</span></label>
            <input id="email" type="email" readonly value="<%= current_user.email %>" class="w-full border border-gray-300 rounded-md bg-gray-50 px-3 py-2 text-gray-700 text-sm" />
          </div>
          <div>
            <label for="usp_number" class="block text-gray-700 font-semibold mb-1">Número USP <span class="text-red-500">*</span></label>
            <input id="usp_number" type="text" readonly value="<%= current_user.nusp %>" class="w-full border border-gray-300 rounded-md bg-gray-50 px-3 py-2 text-gray-700 text-sm" />
          </div>
        </div>

        <div>
          <label for="full_name" class="block text-gray-700 font-semibold mb-1">Nome Completo <span class="text-red-500">*</span></label>
          <input id="full_name" type="text" readonly value="<%= current_user.name %>" class="w-full border border-gray-300 rounded-md bg-gray-50 px-3 py-2 text-gray-700 text-sm" />
        </div>
        <!-- substiruir BLANK por  %=current_user.orientador%> -->
        <div>
          <label for="advisor" class="block text-gray-700 font-semibold mb-1">Orientador(a) <span class="text-red-500">*</span></label>
          <input id="advisor" type="text" readonly value="BLANK" class="w-full border border-gray-300 rounded-md bg-gray-50 px-3 py-2 text-gray-700 text-sm" />
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label for="curriculum_link" class="block text-gray-700 font-semibold mb-1 flex items-center space-x-1">
              <span>Link do Currículo Lattes <span class="text-red-500">*</span></span>
              <%= link_to 'Visualizar Lattes', @student.lattes_link, target: "_blank", rel: "noopener", class: "text-blue-600 text-sm underline ml-2" %>
            </label>
          </div>
          <div>
            <label for="last_update" class="block text-gray-700 font-semibold mb-1">Última Atualização do Lattes <span class="text-red-500">*</span></label>
            <input id="last_update" type="text" readonly value="<%= @student.lattes_last_update%>" class="w-full border border-gray-300 rounded-md bg-gray-50 px-3 py-2 text-gray-700 text-sm" />
          </div>
        </div>

        <div>
          <label for="course_type" class="block text-gray-700 font-semibold mb-1">Tipo de Curso <span class="text-red-500">*</span></label>
          <span class="inline-block bg-orange-200 text-orange-700 text-xs px-3 py-1 rounded font-semibold"><%= @student.role %></span>
        </div>

        <div>
          <label for="career_plan" class="block text-gray-700 font-semibold mb-1">Carreira Pretendida após a Defesa</label>
          <input id="career_plan" type="text" readonly value="<%= @student.pretended_career %>" class="w-full border border-gray-300 rounded-md bg-gray-50 px-3 py-2 text-gray-700 text-sm" />
        </div>

        <div>
          <label for="admission_date" class="block text-gray-700 font-semibold mb-1">Data de Ingresso <span class="text-red-500">*</span></label>
          <input id="admission_date" type="text" readonly value="<%= @student.join_date %>" class="w-full border border-gray-300 rounded-md bg-gray-50 px-3 py-2 text-gray-700 text-sm italic" />
        </div>
      </form>
    </section>

    <!-- talvez?? -->
    <section class="bg-orange-50 border border-orange-300 rounded-md p-4 flex justify-between items-center text-orange-800 text-sm">
      <p>Com seu perfil completo, você pode preencher os relatórios semestrais de forma mais rápida.</p>
      <%= link_to 'Preencher Relatório Semestral', new_report_path, class: "bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded font-semibold" %>
    </section>

    <!-- stats -->
    <section class="grid grid-cols-1 sm:grid-cols-4 gap-4 mt-4 text-gray-700 text-sm">
      <div class="bg-white rounded-md shadow p-4 flex flex-col items-center text-center border border-gray-200">
        <span class="text-2xl font-bold text-blue-700"><%= @student.reports.count %></span>
        <p>Total de Relatórios</p>
      </div>
      <div class="bg-white rounded-md shadow p-4 flex flex-col items-center text-center border border-gray-200">
        <span class="text-2xl font-bold text-green-600"><%= @credits %></span>
        <p>Créditos Cursados</p>
      </div>
      <div class="bg-white rounded-md shadow p-4 flex flex-col items-center text-center border border-gray-200">
        <span class="text-2xl font-bold text-purple-700"><%= @student.publications.count %></span>
        <p>Publicações</p>
      </div>
      <div class="bg-white rounded-md shadow p-4 flex flex-col items-center text-center border border-gray-200">
        <span class="text-2xl font-bold text-orange-600"> <%= @student.name %> (ZERO IDEIA COMO FAZER)</span>
        <p>Progresso Médio</p>
      </div>
    </section>

    <!-- Report History Table -->
    <section class="mt-8 bg-white border border-blue-200 rounded-md shadow p-4 overflow-x-auto">
      <h3 class="font-semibold text-blue-800 mb-4 flex items-center space-x-2">
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M9 17v-6h6v6m-3-6v6"/></svg>
        <span>Histórico de Relatórios</span>
      </h3>
      <table class="min-w-full text-sm text-left text-gray-700">
        <thead class="bg-blue-50 text-blue-700">
          <tr>
            <th scope="col" class="px-4 py-2 whitespace-nowrap border-b border-blue-200">Período</th>
            <th scope="col" class="px-4 py-2 whitespace-nowrap border-b border-blue-200">Data de Envio</th>
            <th scope="col" class="px-4 py-2 whitespace-nowrap border-b border-blue-200">Status</th>
            <th scope="col" class="px-4 py-2 whitespace-nowrap border-b border-blue-200">Avaliado em</th>
            <th scope="col" class="px-4 py-2 whitespace-nowrap border-b border-blue-200">Avaliado por</th>
          </tr>
        </thead>
        <tbody>
          <% if @reports.any? %>
            <% @reports_history.each do |report| %>
            <tr class="border-b border-blue-100 hover:bg-blue-50">
              <td class="px-4 py-2 whitespace-nowrap"><%= report.semester %>o Sem. <%= report.year %> </td>
              <td class="px-4 py-2 whitespace-nowrap"><%= report.date_sent %></td>
              <td class="px-4 py-2 whitespace-nowrap">
                <% status_color = case report.status.downcase
                  when 'aprovado' then 'bg-green-100 text-green-800'
                  when 'aprovado com ressalvas' then 'bg-yellow-100 text-yellow-800'
                  when 'pendente' then 'bg-gray-100 text-gray-700'
                  else 'bg-red-100 text-red-800'
                  end %>
                <span class="inline-block px-2 py-1 rounded text-xs font-semibold <%= status_color %>"><%= report.status %></span>
              </td>
              <td class="px-4 py-2 whitespace-nowrap"><%= report.review_date %> </td>
              <td class="px-4 py-2 whitespace-nowrap"><%= report.reviewer %></td>
            </tr>
          <% end %>
          <% else %>
            <p class="text-gray-500 italic">Nenhum relatório ainda ainda.</p>
          <% end %>
        </tbody>
      </table>
    </section>
  </main>
</div>