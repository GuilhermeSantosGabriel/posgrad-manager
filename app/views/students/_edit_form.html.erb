<%= form_with(model: student, local: true, class: "space-y-8") do |form| %>

  <% if student.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h2 class="font-semibold mb-2"><%= pluralize(student.errors.count, "error") %> proibiu este grupo de ser salvo:</h2>
      <ul class="list-disc list-inside space-y-1">
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div>
        <%= form.label :name, class: "block text-gray-700 font-medium mb-1" %>
        <%= form.text_field :name, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
        <%= form.label "E-mail", class: "block text-gray-700 font-medium mb-1" %>
        <%= form.email_field :email, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
        <%= form.label "Tipo de curso", class: "block text-gray-700 font-medium mb-1" %>
        <%= form.select :role, ["Mestrado", "Doutorado"], class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <!-- Falta definir a conexão com a outra entidade -->
        <p> Orientador </p>
    <%# <div>
        <%= form.label "Orientador", class: "block text-gray-700 font-medium mb-1" %>
        <%#= form.select :professor_id, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <%#/div> %>

    <div>
        <%= form.label "Lattes", class: "block text-gray-700 font-medium mb-1" %>
        <%= form.url_field :lattes_link, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
        <%= form.label "Lattes last update", class: "block text-gray-700 font-medium mb-1" %>
        <%= form.date_field :lattes_last_update, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
        <%= form.label "Carreira pretendida após graduação", class: "block text-gray-700 font-medium mb-1" %>
        <%= form.select :pretended_career, ["Acadêmica", "Trabalho"], class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
        <%= form.label "Data de ingresso", class: "block text-gray-700 font-medium mb-1" %>
        <%= form.date_field :join_date, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  

  <div>
    <%= form.submit "Confirmar", class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-2 rounded shadow transition duration-200" %>
  </div>
<% end %>
