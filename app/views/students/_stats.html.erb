<section class="grid grid-cols-1 sm:grid-cols-4 gap-4 mt-4 text-gray-700 text-sm">
    <div class="bg-white rounded-md shadow p-4 flex flex-col items-center text-center border border-gray-200">
        <span class="text-2xl font-bold text-blue-700"><%= @student.reports.count %></span>
        <p>Total de Relatórios</p>
    </div>

    <div class="bg-white rounded-md shadow p-4 flex flex-col items-center text-center border border-gray-200">
        <span class="text-2xl font-bold text-green-600"><%= @credits %></span>
        <p>Créditos Cursados</p>
    </div>

    <div class="bg-white rounded-md shadow p-4 flex flex-col items-center text-center border border-gray-200">
        <span class="text-2xl font-bold text-purple-700"><%= @student.publications.count %></span>
        <p>Publicações</p>
    </div>

    <div class="bg-white rounded-md shadow p-4 flex flex-col items-center text-center border border-gray-200">
        <span class="text-2xl font-bold text-orange-600"> <%= @student.calculate_progress %>%</span>
        <p>Progresso Médio</p>
    </div>
</section>