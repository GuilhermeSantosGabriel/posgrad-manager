<div class="flex justify-between items-start">
    <div>
      <h2 class="font-semibold text-lg"><%= student.name %></h2>
      <p class="text-sm text-gray-600">USP: <%= student.user.nusp %></p>
    </div>
    <div class="flex space-x-2">
      <button type="button" class="flex items-center space-x-1 text-gray-700 hover:text-gray-900 focus:outline-none border border-gray-300 rounded px-3 py-1 text-sm">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M17 8h2a2 2 0 0 1 2 2v6a2 2 0 0 1-2 2h-2M7 8H5a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h2m5-11v4m0 4h.01"/></svg>
        <span>Contatar</span>
      </button>
      <button type="button" class="flex items-center space-x-1 text-gray-700 hover:text-gray-900 focus:outline-none border border-gray-300 rounded px-3 py-1 text-sm">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/></svg>
        <span>Gerar PDF</span>
      </button>
    </div>
</div>
  <!-- Tenho q fazer js ainda ent n tem funfando ainda-->
  <!-- Tabs -->
  <div class="flex space-x-2 bg-gray-100 rounded-md overflow-hidden text-sm font-medium text-gray-600">
    <button type="button" class="flex-1 py-2 px-4 bg-white text-gray-900 rounded-l-md shadow-inner" aria-current="page">Visão Geral</button>
    <button type="button" class="flex-1 py-2 px-4 hover:bg-gray-200">Acadêmico</button>
    <button type="button" class="flex-1 py-2 px-4 rounded-r-md hover:bg-gray-200">Histórico</button>
  </div>

  <!-- Tab Visao Geral -->
  <div>
    <div class="grid grid-cols-2 gap-y-3 mb-4">
      <div>
        <p class="text-sm text-gray-600">Tipo de Curso</p>
        <p class="font-semibold"><%= student.role %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600">Data de Ingresso</p>
        <p class="font-semibold"><%= student.join_date %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600">Semestre Atual</p>
        <p class="font-semibold"><%= student.semester %>
                <% if student.role == "Mestrado" %>
                / 4
                <% else %>
                / 8
                <% end %> </p>
      </div>
      <div>
        <p class="text-sm text-gray-600">Último Relatório</p>
        <p class="font-semibold"><%= @last_report %></p>
      </div>
    </div>

    <div class="mb-3">
      <div class="flex justify-between text-sm font-medium mb-1">
        <span>Progresso da Pesquisa</span>
        <span><%= student.credits %>/<%= student.credits_needed %></span>
      </div>
      <div class="w-full h-2 bg-gray-200 rounded-full">
        <div class="h-2 bg-blue-700 rounded-full" style="width: <%= student.credits %>/<%= student.credits_needed %>;"></div>
      </div>
    </div>

    <div>
      <div class="flex justify-between text-sm font-medium mb-1">
        <span>Créditos Completados</span>
        <span><%= student.credits %>/<%= student.credits_needed %></span>
      </div>
      <div class="w-full h-2 bg-gray-200 rounded-full">
        <div class="h-2 bg-blue-700 rounded-full" style="width: <%= student.credits %>/<%= student.credits_needed %>;"></div>
      </div>
    </div>
  </div>
</div>

<!-- Tab Academico -->
<div class="max-w-4xl mx-auto bg-white rounded-xl border border-gray-200 p-6 space-y-4 text-gray-900 " id="academico-tab">
  <div class="grid grid-cols-2 gap-4">
    <div class="border border-gray-200 rounded p-4 space-y-1">
      <div class="flex items-center space-x-1 text-blue-600 font-semibold">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2"  viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8 16h8M8 12h8m-6 8v-4"/></svg>
        <h3>Créditos</h3>
      </div>
      <p class="text-2xl font-bold text-blue-700"><%= student.credits %>/<%= student.credits_needed %></p>
      <p class="text-xs text-gray-500"><%= student.calculate_progress %>% completado</p>
    </div>

    <div class="border border-gray-200 rounded p-4 space-y-1">
      <div class="flex items-center space-x-1 text-green-600 font-semibold">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2"  viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4"/></svg>
        <h3>Exame de Qualificação: Aprovado (EDIT)</h3>
      </div>
      <span class="inline-block bg-green-100 text-green-700 text-xs font-semibold rounded px-2 py-0.5">aprovado</span>
    </div>

    <div class="border border-gray-200 rounded p-4 space-y-1">
      <div class="flex items-center space-x-1 text-orange-600 font-semibold">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2"  viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16"/></svg>
        <h3> Dissertação/Tese: (link) </h3>
      </div>
      <span class="inline-block bg-blue-100 text-blue-700 text-xs font-semibold rounded px-2 py-0.5">em andamento</span>
    </div>

    <div class="border border-gray-200 rounded p-4 space-y-1">
      <div class="flex items-center space-x-1 text-red-600 font-semibold">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2"  viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01"/></svg>
        <h3> Próximo prazo: (edit)</h3>
      </div>
      <p class="text-red-600 font-semibold">data (mudar)</p>
      <p class="text-xs text-gray-500">Relatório Semestral</p>
    </div>
  </div>
</div>



