<!-- aqui fica um menu dos alunos e os dados deles -->
<div class="rounded-lg bg-white p-4 shadow-sm border border-gray-200 max-h-[420px] overflow-y-auto">
  <h2 class="font-semibold text-lg mb-4 flex items-center space-x-2">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round" >
      <path d="M17 20h5v-2a4 4 0 00-3-3.87" />
      <path d="M9 20H4v-2a4 4 0 013-3.87"/>
      <circle cx="12" cy="7" r="4"/>
    </svg>
    <span>Meus Orientandos</span>
  </h2>
  <% if @students.any? %>
    <%= render partial: "professors/detailed_info/student", collection: @students, as: :student %>
  <% else %>
    <p class="text-gray-500 italic">Nenhum orientando ainda ainda.</p>
  <% end %>
</div>
